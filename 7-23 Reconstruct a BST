#include <stdio.h>
#include <stdlib.h>

void readInput(char *arr, int num) {
	
	getchar();
	for(int i = 0; i < num; i++) {
		scanf("%c", &arr[i]);
	}	
}

int getHeight(char *preOrder, char *inOrder, int len){
	int hl, hr;
	if(len == 0) return 0;
	
	int pos = -1;	
	for(int i = 0; i < len; i++) {
		if(inOrder[i] == preOrder[0]) {
			pos = i;
			break;
		}
	}
	
	hl = getHeight(preOrder + 1, inOrder, pos);
	hr = getHeight(preOrder + pos + 1, inOrder + pos + 1, len - pos - 1);

	return hl > hr ? hl + 1 : hr + 1;
}

int main(){
	
	int N;
    scanf("%d", &N);
    
    char preOrder[N], inOrder[N];
    
    readInput(preOrder, N);
    readInput(inOrder, N);
    
    printf("%d\n", getHeight(preOrder, inOrder, N));

    return 0;
}
